{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 420,
  "padding": 5,
  "autosize": { "type": "fit", "contains": "padding" },
  "projection": { "type": "mercator", "center": [109.5, 4.5], "scale": 3000 },
  "layer": [
    {
      "data": {
        "url": "https://cdn.jsdelivr.net/gh/wantedWaffleInUni/dv2@main/public/data/mys_state_province.topojson",
        "format": { "type": "topojson", "feature": "ne_10m_admin_1_states_provinces" }
      },
      "mark": {
        "type": "geoshape",
        "fill": "#d1d5db",
        "stroke": "#374151",
        "strokeWidth": 1.0
      },
      "encoding": {
        "tooltip": [{"field": "properties.name", "type": "nominal", "title": "State"}]
      }
    },
    {
      "data": {
        "url": "https://cdn.jsdelivr.net/gh/wantedWaffleInUni/dv2@main/public/data/mys_state_province.topojson",
        "format": { "type": "topojson", "feature": "ne_10m_admin_1_states_provinces" }
      },
      "transform": [
        { "filter": "isValid(datum.properties) && isValid(datum.properties.iso_3166_2)" },
        {
          "lookup": "properties.iso_3166_2",
          "from": { "data": { "name": "prf" }, "key": "shapeISO",
            "fields": ["prf_pct","prf_ha","state"] }
        },
        { "filter": "isValid(datum.prf_pct)" }
      ],
      "mark": { "type": "geoshape" },
      "encoding": {
        "color": {
          "field": "prf_pct", "type": "quantitative",
          "title": "% of land in PRF",
          "scale": { "scheme": "greens", "type": "quantize", "domain": [0,60] }
        },
        "tooltip": [
          { "field": "properties.name", "type": "nominal", "title": "State" },
          { "field": "prf_ha", "type": "quantitative", "title": "PRF (ha)" },
          { "field": "prf_pct", "type": "quantitative", "title": "PRF %" }
        ]
      }
    },
    {
      "data": { "name": "prf" },
      "transform": [
        { "window": [{ "op": "rank", "as": "rank_desc" }], "sort": [{ "field": "prf_pct", "order": "descending" }] },
        { "filter": "datum.rank_desc <= 3" }
      ],
      "mark": {
        "type": "text",
        "fontSize": 14,
        "fontWeight": "bold",
        "dx": 0,
        "dy": -20,
        "fill": "#1f2937",
        "stroke": "#ffffff",
        "strokeWidth": 2
      },
      "encoding": {
        "longitude": { "field": "lon", "type": "quantitative" },
        "latitude": { "field": "lat", "type": "quantitative" },
        "text": { 
          "field": "state", 
          "type": "nominal"
        },
        "tooltip": [
          { "field": "state", "type": "nominal", "title": "State" },
          { "field": "prf_pct", "type": "quantitative", "title": "PRF %", "format": ".1f" },
          { "field": "rank_desc", "type": "quantitative", "title": "Rank" }
        ]
      }
    }
  ]
}
